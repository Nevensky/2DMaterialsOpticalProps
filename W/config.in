&directories
 rundir    = '/Users/nevensky/MoS2_201X201'
 savedir   = '/Users/nevensky/tmp/MoS2.save'
 scf_file  = '/MoS2.sc.out'
 band_file = '/MoS2.band'
/
&system
 lf        = 'z'         ! Crystal local field effect included in z for lf=1 or in x,y,z direction lf=3
 jump      = 1           ! jump = 1 skips reloading wfns in IBZ for all bands m (occ.) and n (virt.)
 omin      = 1.0D-5      ! [Hartree] frequency range, lower bound
 omax      = 2.0D0       ! [Hartree] frequency range, upper bound
 qmin      = 2
 qmax      = 2
/
&config
 NG       = 20517       ! Total number of G vectors
 NGd      = 2541        ! Number of coefficients CG; should be less than minimum number of coefficients over all evc.n
 NkI      = 19            ! Number of wave vectors in IBZ
 Nband    = 60          ! Number of bands (unit cell)
 Nocc     = 9           ! Number of occupied bands (unit cell)
 NelQE    = 18          ! Number of electrons(unit cell)
 no       = 2001        ! Number of frequencies
 nq       = 2           ! broj valnih vektora tu je 2 jer je rucno paralelizirano!
 Nlfd     = 100         ! dimenzija polja za local field zasto prozivoljno 50, ne moze se znati unaprijed
/
&parameters
 Efermi   = 0.5554       ! [eV]      Fermi energy 
 a0       = 5.9715       ! [a.u.]    unit cell parameter in parallel direction 
 c0       = 29.8577      ! [a.u.]    unit cell parameter in perependicular direction 
 eps      = 1.0D-4       ! 1.0D-4    threshold
 T        = 0.01         ! [eV]      Temperature 
 eta      = 0.05         ! [eV]      Damping i\eta
 Ecut     = 1.0          ! [Hartree] Cutoff energy for crystal local field calculations , for Ecut=0 S matrix is a scalar ?
 Vcell    = 922.0586     ! [a.u.^3]  Unit-cell volume 
/
&parallel
 Nthreads = 8            ! Number of OpenMP threads
/
