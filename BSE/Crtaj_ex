#! /usr/bin/gnuplot

set terminal postscript eps color size 12,12 enhanced "Helvetica" 40

set output "Spe"

unset label
unset key

set xlabel "Wave vector {Q} [nm^{-1}]" 
set ylabel "{/Symbol w}\ [eV]"

set xrange [0:0.05]
set yrange [0.0:4.0]


#set view map
set pm3d map interpolate 3,3
set lmargin at screen 0.1;
set rmargin at screen 0.85;
set bmargin at screen 0.1;
set tmargin at screen 0.95;



set size 1.0,1.0
set size ratio 1

set style line 1 pt 5.0 lt 2 ps 1.5 lc rgb "blue" lw 2
set style line 2 pt 5.0 lt 2 ps 1.5 lc rgb "white" lw 2
set style line 3 pt 5.0 lt 2 ps 0.5 lc rgb "gray" lw 2
set style line 4 pt 1.0 lt 2 ps 1.0 lc rgb "white" lw 2
set style line 5 pt 1.0 lt 2 ps 1.0 lc rgb "blue" lw 2
set style line 6 pt 7.0 lt 2 ps 0.5 lc rgb "red" lw 2


set palette defined ( 0.0 "blue", 0.5 "green", 1.0 "yellow",  2.5 "brown", 5.0 "violet", 10.0 "white")
set cbrange [ 0 : 10.0]


splot "plot" using 1:2:3 with points pointtype 5 pointsize 1 palette linewidth 0 title "" , 
#splot "Spectra1" using 1:2:3 palette
